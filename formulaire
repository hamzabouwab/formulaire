<script>
    const radioBtn=document.querySelectorAll(".radioButton")
    
    radioBtn.forEach(element => {
        element.addEventListener("click",function () { 
            radioBtn.forEach(btnR => {
                btnR.style.backgroundColor="transparent"
            });
       element.style.background="rgb(248, 232, 0)";
    })
